#include <stdio.h>
#include <stdbool.h> 
int main () {
    bool otro = true;
    while (otro) {
    int pares=0,impares=0,contador=1;
    while (contador<=10) {
        int n;
        printf("ingrese un numero\n");
        scanf("%d", &n);
            contador++;
        if (n%2==0){
            pares++;
        printf("%d es un numero par\n",n); }
        else { impares++;
        printf("%d no es un numero par\n",n);
    }
}
printf("%d son numeros par\n", pares);
        printf("%d son numeros impares\n", impares);
        printf("quiere ingresar otro numero? (s/n):");
        char respuesta;
        scanf(" %c", &respuesta);
        if (respuesta == 'n') {
            otro = false;
        }
    }
